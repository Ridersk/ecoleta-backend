{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start:dev": "ts-node-dev --transpileOnly --ignore-watch node_modules src/server.ts",
    "migrate:dev": "knex --knexfile knexfile.ts migrate:latest",
    "seed:dev": "knex --knexfile knexfile.ts seed:run",
    "start": "node build/src/server.js",
    "postinstall": "npm run build:prod",
    "build:prod": "rimraf ./build && tsc && npm run migrate:prod && npm run seed:prod && npm run resources:copy && npm run env:build",
    "migrate:prod": "knex --knexfile ./build/knexfile.js migrate:latest",
    "seed:prod": "knex --knexfile ./build/knexfile.js seed:run",
    "resources:copy": "cp resources/ build/ -r",
    "env:build": "cp .env.example .env",
    "node:prod:clear": "npm prune --production"
  },
  "keywords": [],
  "author": "lucas",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.691.0",
    "celebrate": "^12.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.1",
    "multer": "^1.4.2",
    "rimraf": "^3.0.2",
    "sqlite3": "^4.2.0",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/multer": "^1.4.3",
    "@types/uuid": "^8.0.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.5"
  }
}
